<div class="homepage-banner mb-3">
    <div class="homepage-banner__image">
        {% if use_webpack %}
            <img class="img-fluid" src="{{ asset('build/shop/images/homepage-banner.jpg', 'shop') }}" alt="{{ 'sylius.homepage.banner_content'|trans }}">
        {% else %}
            <img class="img-fluid" src="{{ asset('assets/shop/img/homepage-banner.jpg') }}" alt="{{ 'sylius.homepage.banner_content'|trans }}">
        {% endif %}
    </div>
    <div class="homepage-banner__content top-0 left-0 text-center text-lg-left w-100 h-100">
        <div class="container">
            <h1 class="font-weight-bold">{{ 'sylius.homepage.banner_content'|trans }}</h1>
            <p><a href="#" class="btn btn-primary font-weight-bold">{{ 'sylius.homepage.banner_button'|trans }}</a></p>
        </div>
    </div>
</div>
